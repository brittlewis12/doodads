<div class="show-app">
  <h1><%= @app.name %></h1>

  <img class="icon" src="<%= @app.icon_url %>" /><br/>
  <div class="app-info">
    <ul class="app-info">
      <% formatted_price = (@app.price > 0 ? "$#{@app.price}" : "Free") %>  
      <li><%= formatted_price %></li>
      <li><%= @app.category %></li>
      <li class="description"><%= @app.description %></li>

    </ul>

    <% if @app.game_center_enabled %>
      <p>with Game Center integration</p>
    <% end %>

    <% if @app.is_universal %>
      <p>Universal (made for iPhone & iPad)</p>
    <% end %>

    <div class="screenshots">
      <% @screenshots.each do |screenshot| %>
        <% if screenshot.screenshot_url %>
          <img class="screenshot" src="<%= screenshot.screenshot_url %>">
        <% elsif screenshot.ipad_screenshot_url %>
          <img class="screenshot" src="<%= screenshot.ipad_screenshot_url %>">
        <% end %>
      <% end %>
    </div>

    <div><%= "This version has an average #{@app.current_rating} rating in #{@app.current_rating_count} reviews." %><br/>
    <%= "All versions have an average #{@app.total_rating} rating in #{@app.total_rating_count} reviews." %></div>

    <div class="footer-links"><%= link_to @app.developer, @app.developer_url %> | 
      
    <%= link_to "View on iTunes", @app.itunes_url %></div>
  </div>
</div>