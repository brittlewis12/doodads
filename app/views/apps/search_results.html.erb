<% if @results.nil? %>
<p>No results found. Try your search again.</p>
<% else %>
  <ul>
  <% @results.each do |result| %>
    <% itunes_id = result["trackId"] %>
    <h3><%= link_to result["trackName"], app_path(itunes_id) %></h3>
    <!-- ADD BORDER RADIUS | MOVE MAX-WIDTH -->
    <img src="<%= icon = result["artworkUrl512"] %>" style="max-width: 20%">
    <li><%= category = result["primaryGenreName"] %></li>
    <li><%= price = result["price"] %></li>
    <br/>
  <% end %>
  </ul>
<% end %>