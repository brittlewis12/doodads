<div class="search-results">
  <h1>Search results</h1>

  <% if @results.nil? %>
    <p>No results found. Try your search again.</p>
  <% else %>
    <% @results.each do |result| %>
      <% itunes_id = result["trackId"] %>
      <% app_name = result["trackName"] %>
      <% price = result["price"] %>
      <% price = "Free" unless price > 0 %>

      <div class="app-result">
        <h2 class="app-result"><%= link_to app_name, {action: :create, method: :post}, {name: "lookup_id", value: itunes_id} %> â€” <span class="price"><%= price %></span></h3>

        <img class="icon app-result" src="<%= icon = result["artworkUrl512"] %>" />
        <ul class="app-result">
          <li><strong>Category:</strong> <%= result["primaryGenreName"] %></li>
          <li class="description"><strong>Description:</strong> <%= result["description"][0..250] %>...</li>
        </ul>
      </div>
    <% end %>
  <% end %>
</div>